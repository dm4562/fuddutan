<% provide(:title, 'Return Lost Item') %>
<% @return_users = ReturnUser.all %>

<h1>Return Lost Item</h1>

<div class="container">

</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= link_to("Choose Existing User", '#', class: "btn btn-default", id: "select_existing_user") %>
      <%= simple_form_for(@item) do |f| %>
        <%= f.input :return_user_id, collection: @return_users, input_html: { class: 'dropdown-toggle' } %>
        <%= f.button :submit, input_html: { class: "btn btn-primary" } %>
      <% end %>
    </div>
  </div>
</div>

<br>
<div class="container">

</div>


<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= link_to("Create a new user", '#', class: "btn btn-default", id: "create_new_user") %>
      <%= simple_form_for(@return_user) do |f| %>
        <%= f.input :name, input_html: { class: 'form-control' } %>
        <%= f.input :gtid, input_html: { class: 'form-control'} %>
        <%= f.input :state_id, input_html: { class: 'form-control' } %>
        <%= f.button :submit, input_html: { class: "btn btn-primary" } %>
      <% end %>
    </div>
  </div>
</div>
