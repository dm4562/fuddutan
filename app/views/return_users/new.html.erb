<% provide(:title, 'Return Lost Item') %>
<% @return_users = ReturnUser.all %>

<h1>Return Lost Item</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for(@item) do |f| %>
        <%= f.input :return_user_id, collection: @return_users, input_html: { class: 'dropdown-toggle' } %>
        <%= f.button :submit, input_html: { class: "btn btn-primary" } %>
      <% end %>
    </div>
  </div>
</div>

<br>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for(@return_user) do |f| %>
        <%= f.input :name, input_html: { class: 'form-control' } %>
        <%= f.input :gtid, input_html: { class: 'form-control'} %>
        <%= f.input :state_id, input_html: { class: 'form-control' } %>
        <%= f.input :item_id, as: :hidden, input_html: { value: @item.id } %>
        <%= f.button :submit, input_html: { class: "btn btn-primary" } %>
      <% end %>
    </div>
  </div>
</div>
